---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header>
    <div class="container py-3">
        <div class="row">
            <div class="col-5 col-md-4 col-lg-3">
                <img
                    src="../../logo.png"
                    alt="Mr. Crack & Buckle logo."
                    class="w-100"
                />
            </div>
            <div
                class="col-6 col-md-8 col-lg-9 d-none d-md-flex flex-column justify-content-center align-items-end"
            >
                <p class="fs-3 mb-1">Call Now For a Quote</p>
                <a href="tel:08007312368" class="btn btn-lg btn-warning fs-3"
                    ><i class="bi bi-telephone-fill me-1"></i>0800 7312368</a
                >
            </div>
            <div
                class="col-7 d-md-none d-flex align-items-center justify-content-end"
            >
                <a href="tel:08007312368" class="btn btn-warning btn-lg">
                    <i class="bi bi-telephone-fill"></i>
                </a>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg bg-primary navbar-dark py-3">
        <div class="container">
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbar"
                aria-controls="navbar"
                aria-expanded="false"
                aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a
                            class={currentPath === ""
                                ? "active nav-link"
                                : "nav-link"}
                            href="/">Home</a
                        >
                    </li>
                    <li class="nav-item">
                        <a
                            class={currentPath === "about"
                                ? "active nav-link"
                                : "nav-link"}
                            href="/about">About</a
                        >
                    </li>
                    <li class="nav-item">
                        <a
                            class={currentPath === "services"
                                ? "active nav-link"
                                : "nav-link"}
                            href="/services">Services</a
                        >
                    </li>

                    <li class="nav-item">
                        <a
                            class={currentPath === "contact"
                                ? "active nav-link"
                                : "nav-link"}
                            href="/contact">Contact</a
                        >
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
