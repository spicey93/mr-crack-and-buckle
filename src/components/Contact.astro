<div class="container my-5">
    <form
        action="https://safe-island-80193.herokuapp.com/crackandbuckle"
        method="post"
        class="col-lg-6 offset-lg-3 p-3 border rounded-3"
    >
        <h3 class="text-center text-primary mb-4 h1">Get a Quote</h3>
        <p class="text-center">
            Send us a message today and a member of our team will be in touch
            shortly.
        </p>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
                type="text"
                class="form-control"
                name="name"
                placeholder="John Smith"
                required
            />
        </div>
        <div class="mb-3">
            <label for="tel" class="form-label">Tel</label>
            <input
                type="tel"
                class="form-control"
                name="tel"
                placeholder="01234 567 890"
                required
            />
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
                type="email"
                class="form-control"
                name="email"
                placeholder="johnsmith@gmail.com"
                required
            />
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea
                name="message"
                id="message"
                cols="30"
                rows="3"
                class="form-control"></textarea>
        </div>
        <div class="d-grid">
            <button class="btn btn-primary">Send</button>
        </div>
    </form>
</div>
